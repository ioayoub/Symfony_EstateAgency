{% extends 'base.html.twig' %}

{% block title  %}
	Tout nos biens
{% endblock %}

{% block body %}

	<div class="jumbotron">
		<div class="container">

			{{ form_start(form) }}

			<div class="form-row">
				<div class="col">
					{{ form_row(form.minSurface) }}
				</div>
				<div class="col">
					{{ form_row(form.maxPrice) }}
				</div>
				<div class="col">
					{{ form_row(form.options) }}
				</div>
				<div class="col">
					<button class="btn btn-primary" type="submit">Rechercher</button>
				</div>
			</div>
			{{ form_end(form) }}

		</div>
	</div>

	<div class="container mt-4">
		<h1 style="text-align :center">Voir tout nos biens</h1>
		<div class="row">
			{% for property in properties %}
				<div class="col-md-4">
					{%include 'property/_property.html.twig' %}
				</div>
			{% else %}

				<p style="text-align :center">Aucun bien ne corresponds Ã  votre demande.</p>

			{% endfor %}

		</div>
		<div class="pagination">
			{{ knp_pagination_render(properties)}}
		</div>
	</div>

{% endblock %}

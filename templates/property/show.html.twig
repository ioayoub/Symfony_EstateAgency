{% extends 'base.html.twig' %}

{% block title property.title %}

{% block body %}

	<div class="jumbotron">
		<div class="container">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{message}}
				</div>
			{% endfor %}

			{% if not form.vars.valid %}
				<div class="alert alert-danger">
					Oups.. Il me semble avoir vu une erreur de saisie.
				</div>
			{% endif %}

			<div class="row">
				<div class="col md-8">
					{% if property.filename %}
						<img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('medium') }} " alt="card-img-top" style="width: 100%; height: auto;"/>
					{% else %}
						<img src="https://picsum.photos/800/530" alt="card-img-top"/>
					{% endif %}
				</div>
				<div class="col-md-4">
					<h1>
						{{  property.title }}
					</h1>
					<h2>
						{{ property.rooms }}
						pièces -
						{{ property.surface }}
						m²
						<div class="text-primary" style="font-weight: bold; font-size: 4rem">
							{{ property.formattedPrice }}
							€
						</h2>
						<button class="btn btn-primary">Contacter l'agence</button>
						<div id="contactForm" class="mt-4">
							{{form_start(form)}}
							<div class="row">
								<div class="col">
									{{form_row(form.lastname)}}
								</div>
								<div class="col">
									{{form_row(form.firstname)}}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col">
								{{form_row(form.phone)}}
							</div>
							<div class="col">
								{{form_row(form.email)}}
							</div>
						</div>
						<div class="row">
							<div class="col">
								{{form_rest(form)}}
							</div>
						</div>
						<div class="form-group">
							<button class="btn btn-primary">Envoyer</button>
						</div>
						{{form_end(form)}}
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
<div class="container mt-4">


	<nav class="nav-tabs" id="tab"></nav>

	<p>
		{{property.description | nl2br }}
	</p>

	<div class="row">
		<div class="col-md-8">
			<H2>Caractèristiques</H2>
			<table class="table table-striped">
				<tr>
					<td>Surface Habitable</td>
					<td>
						{{ property.surface }}
						m²</td>
				</tr>
				<tr>
					<td>
						Pièces
					</td>
					<td>
						{{ property.rooms }}
					</td>
				</tr>
				<tr>
					<td>
						Chambres
					</td>

					<td>
						{{  property.bedrooms }}
					</td>
				</tr>
				<tr>
					<td>Etage
					</td>
					<td>
						{{ property.floor }}
					</td>
				</tr>
				<tr>
					<td>Chauffage</td>
					<td>
						{{ property.heatType }}
					</td>
				</tr>

			</table>
		</div>
		<div class="col-md-4">
			<h2>Spécificités</h2>
			<ul class="list-group">
				{% for option in property.options %}
					<li class="list-group-item">
						{{ option.name }}
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</div>{% endblock %}
